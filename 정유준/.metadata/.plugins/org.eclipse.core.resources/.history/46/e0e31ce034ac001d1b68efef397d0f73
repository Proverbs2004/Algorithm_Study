package day0214;

import java.util.Scanner;

public class Flatten {

	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);

		for (int idx = 1; idx < 11; idx++) {
			int dump = sc.nextInt();
			int dumpCount = 0;
			
			//높이에 해당하는 2차원 배열의 값을 1로 변경 
			int[][] arr = new int[100][101];
			for (int i = 0; i < 100; i++) {
				int height = sc.nextInt();
				arr[i][height]++;
			}

			int minheight = 101;
			int maxheight = 0;
			int minGap = 101;
			int maxGap = 0;
			
			//최대 크기의 j의 값을(1) j-1로 옮기고
			//최소 크기의 j값을(1) j+1로 옮긴다.
			//dumpCount가 dump가 될 때까지 반복
			while (dumpCount != dump) {
				dumpCount++;
				for (int row = 0; row < 100; row++) {
					for (int col = 1; col < 101; col++) {
						if (arr[row][col] == 1) {
							if (col > maxheight) {
								maxheight = col;
								arr[row][col - 1] = 1;
								arr[row][col] = 0;
							}
							if (col < minheight) {
								minheight = col;
								arr[row][col] = 0;
								arr[row][col + 1] = 1;
							}
//							dumpCount++;
						}
					}
				}
				for (int row = 0; row< 100; row++) {
					for (int col = 1; col <101; col++) {
						if(arr[row][col] == 1) {
							if(col > maxGap) {
								maxGap = col;
							}
							if(col < minGap) {
								minGap = col;
							}
						}
					}
				}
			}
			System.out.println("#" + idx + " " + (maxGap-minGap));
		}
		sc.close();
	}
}
