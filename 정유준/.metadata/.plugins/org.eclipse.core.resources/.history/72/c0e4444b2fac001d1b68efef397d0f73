package day0214;

import java.util.Scanner;

public class Flatten {

	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);

		for (int idx = 1; idx < 11; i++) {
			int dump = sc.nextInt();
			int dumpCount = 0;

			int[][] arr = new int[100][101];
			for (int i = 0; i < 100; i++) {
				int height = sc.nextInt();
				arr[i][height]++;
			}

			int minheight = 101;
			int maxheight = 0;
			int minGap = 101;
			int maxGap = 0;
			
			while (dumpCount == dump) {
				for (int i = 0; i < 100; i++) {
					for (int j = 1; j < 101; j++) {
						if (arr[i][j] == 1) {
							if (j > maxheight) {
								maxheight = j;
								arr[i][j - 1] = 1;
								arr[i][j] = 0;
							}
							if (j < minheight) {
								minheight = j;
								arr[i][j] = 0;
								arr[i][j + 1] = 1;
							}
							dumpCount++;
						}
					}
				}
				for (int i = 0; i< 100; i++) {
					for (int j = 1; j <101; j++) {
						if(arr[i][j] == 1) {
							if(j > maxGap) {
								maxGap = j;
							}
							if(j < minGap) {
								minGap = j;
							}
						}
					}
				}
			}
		}
		sc.close();
	}
}
