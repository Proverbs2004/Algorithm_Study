package test01;

public class Test3 {

	public static void main(String[] args) {
		int num = atoi("1234");
		System.out.println(num);
	}

	private static int atoi(String string) {
		char[] arr = string.toCharArray();
		int value = 0;

		int digit;
		for (int i = 0; i < arr.length; i++) {
			if (arr[i] >= '0' && arr[i] <= '9') {
				digit = arr[i] - '0';
			} else {
				break;
			}
			value = (value * 10) + digit;
		}
		return value;
	}
}
